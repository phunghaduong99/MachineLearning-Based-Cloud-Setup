        title Login

            //- .shadow-lg.p-3.mb-5.bg-white
        #signin-container.container.text-center.mt-5
            #amcop_logo.jumbotron.text-center.mb-5
                img(src='/images/amcop_logo.png' alt='amcop_logo')
            div.shadow-lg.p-3.mb-5.bg-white.paper
                form(action='/auth/amcop' method='post')
                    h1.d-inline-flex.mb-4.text-black-50 &nbsp;&nbsp;Log In&nbsp;&nbsp;
                    if auth_error === true
                        .alert.alert-danger.alert-dismissable.w-75.d-inline-flex
                            |  #{auth_error_message}
                    br
                    .form-group.d-inline-flex.w-75.mb-4
                        .input-group
                            .input-group-prepend
                                span.input-group-text
                                    i.fa.fa-envelope
                            input.form-control(type='email' name='email' placeholder='Email' required='required' value=email)
                    br
                    .form-group.d-inline-flex.w-75.mb-4
                        .input-group
                            .input-group-prepend
                                span.input-group-text
                                    i.fa.fa-key
                            input.form-control(type='password' minlength="3" name='password' placeholder='Password' required='required' value=password)
                    .form-group
                        button.btn.btn-primary.btn-block.mb-4.w-75(type='submit')
                            | Log In
